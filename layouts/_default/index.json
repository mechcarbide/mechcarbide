{{- $.Scratch.Add "items" slice -}}

{{- range .Site.RegularPages -}}
  {{- if eq .Type "suppliers" -}}
    {{- $.Scratch.Add "items" (dict 
        "title" .Title 
        "summary" .Summary
        "description" .Params.description
        "regions" .Params.regions
        "products" .Params.products
        "content" .Plain
        "permalink" .Permalink
    ) -}}
  {{- end -}}
{{- end -}}

{{- $.Scratch.Get "items" | jsonify -}}
